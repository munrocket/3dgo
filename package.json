{
  "name": "goban-3d",
  "version": "0.1.0",
  "author": "munrocket",
  "license": "GPL-3.0",
  "homepage": "https://github.com/munrocket/goban-3d",
  "vue": {
    "publicPath": "/"
  },
  "scripts": {
    "serve": "npm-run-all --parallel serve-vue serve-styles",
    "serve-vue": "vue-cli-service serve",
    "serve-styles": "npm run build-styles -- --watch",
    "build": "npm run build-styles && npm run build-vue",
    "build-vue": "vue-cli-service build",
    "build-styles": "node-sass -x ./src/assets/styles/custom-bulma.scss ./src/assets/styles/custom-bulma.css",
    "lint": "vue-cli-service lint",
    "deploy": "node ./node_modules/vue-gh-pages/index.js -b gh-pages"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "three": "^0.100.0",
    "three-orbitcontrols": "^2.99.1",
    "vue": "^2.5.21",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.7.0",
    "@vue/cli-plugin-eslint": "^3.0.4",
    "@vue/cli-service": "^3.0.4",
    "@vue/eslint-config-prettier": "^4.0.1",
    "bulma": "^0.7.2",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^7.0.1",
    "vue-gh-pages": "^1.19.0",
    "vue-template-compiler": "^2.5.21"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 8%",
    "last 2 versions",
    "not ie < 11"
  ]
}
